<div class="card-deck mb-3">
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">Employee</h5>
      <p class="card-text">An An employee of mpb you are to click here view job cards or you can view them below</p>
    </div>
    <div class="card-footer">
      <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#exampleModal">Complete/View
        Jobcards
      </button>


    </div>
  </div>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">Contractor</h5>
      <p class="card-text">As A Contractor you are to click the button below to assign jobcards, view pending cards and view
        completed jobcards</p>
    </div>
    <div class="card-footer">
      <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#exampleModal">Assign jobcards</button>



    </div>
  </div>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">For Consultant</h5>
      <p class="card-text">As A Consultant you are to click the button below to add jobcards</p>
    </div>
    <div class="card-footer">
      <a href="/ideas/add" class="btn btn-primary btn-block ">Add Job Cards</a>
    </div>
  </div>
</div>
{{#each ideas}} {{!-- modal --}}
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{title}}
        <a class="btn btn-dark px-5" href="/ideas/edit/{{id}}">Assign To</a>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
{{!-- end of modal --}} {{!-- modal --}}
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">View</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{title}} {{details}}
        <a class="btn btn-dark px-5" href="/ideas/edit/{{id}}">Complete</a>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
{{!-- end of modal --}}
<div class="card card-body mb-2">
  <h4>Title: {{title}}</h4>
  <p>Details: {{details}}</p>
  <p>Task ID: {{taskid}}</p>
  <p>Action: {{action}}</p>
  <p>Address: {{address}}</p>
  <p>Suburb: {{suburb}}</p>
  <p>Customer Name{{customername}}</p>
  <p>Problem: {{problem}}</p>
  <p>Meter Number: {{meterno}}</p>
  <p>Meter Type: {{metertype}}</p>
  <p>Domestic: {{domestic}}</p>
  <p>Status: Pending</p>
  <a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
  <form method="post" action="/ideas/{{id}}?_method=DELETE">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="btn btn-danger btn-block" value="Delete">
  </form>
</div>
{{else}}
<p>No Job Card Listed</p>
{{/each}}