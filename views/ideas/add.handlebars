<div class="card card-body">
  <h3>Job Card</h3>
  <form action="/ideas" method="post">
    {{!-- Consultant --}}
    <div class="form-group">
      <label for="taskid">Task Id</label>
      <input type="text" name="taskid" class="form-control">
    </div>
    <div class="form-group">
      <label for="action">Action</label>
      <input type="text" class="form-control" name="action">
    </div>
    <div class="form-group">
      <label for="problem">Problem</label>
      <input type="text" name="problem" class="form-control">
    </div>
    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" name="address" class="form-control">
    </div>
    <div class="form-group">
      <label for="suburb">Suburb</label>
      <input type="text" name="suburb" class="form-control">
    </div>
    <div class="form-group">
      <label for="customername">Customer Name</label>
      <input type="text" name="customername" class="form-control">
    </div>
    {{!-- Contractor --}}
    <div class="form-group">
      <label for="assignedto">Assign JC To:</label>
      <input type="text" name="assignedto" class="form-control">
    </div>
    <div class="form-group">
      <label for="status">Job Card Status</label>
      <input type="text" name="status" class="form-control">
    </div>
    {{!-- Service Worker --}}

    <div class="form-group">
      <label for="standnumber">Stand Number</label>
      <input type="text" name="standnumber" class="form-control">
    </div>
    <div class="form-group">
      <label for="streetnumber">Street Number</label>
      <input type="text" name="streetnumber" class="form-control">
    </div>
    <div class="form-group">
      <label for="streetname">Street Name</label>
      <input type="text" name="streetname" class="form-control">
    </div>
    <div class="form-group">
      <label for="meternumber">Meter Number</label>
      <input type="text" name="meternumber" class="form-control">
    </div>
    <div class="form-group">
      <label for="metertype">Meter Type</label>
      <input type="text" name="metertype" class="form-control">
    </div>
    <div class="form-group">
      <label for="reading">Readings: </label>
      <input type="text" name="reading" class="form-control">
    </div>
    <div class="form-group">
      <label for="dails">Dails</label>
      <input type="text" name="dails" class="form-control">
    </div>
    <div class="form-group">
      <label for="size">Sizes</label>
      <input type="text" name="size" class="form-control">
    </div>
    <div class="form-group">
      <label for="agedreplacement">Aged Replacements</label>
      <input type="text" name="agedreplacement" class="form-control">
    </div>
    <div class="form-group">
      <label for="waterleaks">Waterleaks</label>
      <input type="text" name="waterleaks" class="form-control">
    </div>
    <div class="form-group">
      <label for="fittingsused">Fittings Used</label>
      <input type="text" name="fittingsused" class="form-control">
    </div>

    <button type="submit" class="btn btn-dark mt-3">Submit</button>
  </form>
</div>